{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AIWisper",
  "version": "2.0.12",
  "identifier": "com.aiwisper.desktop",
  "build": {
    "beforeDevCommand": "cd ../ui && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AIWisper",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "AIWisper Team",
    "category": "Productivity",
    "shortDescription": "AI-powered speech transcription",
    "longDescription": "AIWisper is a desktop application for real-time speech transcription powered by AI models like Whisper and GigaAM.",
    "copyright": "Copyright 2025 AIWisper Team",
    "macOS": {
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": "AIWisper Developer"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "resources": [
      "resources/*"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
